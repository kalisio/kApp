{
  "name": "kapp",
  "description": "Kalisio App Template",
  "version": "1.2.0",
  "homepage": "https://github.com/kalisio/kapp",
  "keywords": [
    "kalisio"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/kalisio/kapp.git"
  },
  "author": {
    "name": "Kalisio contributors",
    "url": "https://github.com/kalisio"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/kalisio/kapp/issues"
  },
  "scripts": {
    "version": "cordova-set-version cordova/config.xml.tpl",
    "release:patch": "cd api && npm run release:patch && cd .. && npm version --no-git-tag-version --force patch",
    "release:minor": "cd api && npm run release:minor && cd .. && npm version --no-git-tag-version --force minor",
    "release:major": "cd api && npm run release:major && cd .. && npm version --no-git-tag-version --force major",
    "changelog": "github_changelog_generator -u kalisio -p kapp && git add CHANGELOG.md && git commit -am \"Updating changelog\"",
    "clean": "quasar clean",
    "provision": "npm run icons:cp && npm run tours:cp",
    "dev": "npm run provision && cross-env NODE_ENV=development quasar dev",
    "prod": "cd api && npm run prod",
    "build": "npm run provision && quasar build",
    "cordova:clean": "cd src-cordova && cordova clean && cd ..",
    "cordova:config": "envsub -s dollar-both src-cordova/config.xml.tpl src-cordova/config.xml",
    "cordova:config:android": "npm run cordova:config && cd src-cordova && cordova platform add android && cd ..",
    "cordova:config:ios": "npm run cordova:config && cd src-cordova && cordova platform add ios && cd ..",
    "cordova:dev:android": "npm run cordova:config:android && npm run provision && quasar dev -m android",
    "cordova:dev:ios": "npm run cordova:config:ios && npm run provision && quasar dev -m ios",
    "cordova:build:android": "npm run cordova:config:android && npm run provision && quasar build -m cordova -T android",
    "cordova:build:ios": "npm run cordova:config:ios && npm run provision && quasar build -m cordova -T ios -- --device",
    "analyze:stats": "webpack --config build/webpack.prod.conf.js --profile --json > build-stats.json",
    "analyze:treemap": "webpack-bundle-analyzer build-stats.json dist",
    "analyze": "npm run analyze:stats && npm run analyze:treemap",
    "lint": "standard src/**/*.js src/**/*.vue test/**/*.js --fix",
    "benchmark": "node ./benchmark",
    "icons:cp": "shx cp -R node_modules/@kalisio/kdk/extras/icons/* public/icons/kdk",
    "tours:cp": "shx cp -R node_modules/@kalisio/kdk/extras/tours/* src/tours",
    "mocha": "mocha test/**/*.test.mjs --timeout 30000",
    "coverage": "c8 npm run mocha",
    "test:server": "cd api && npm run test",
    "test:client": "cd test && npm run coverage"
  },
  "standard": {
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "vue"
    ],
    "globals": [
      "DEV",
      "PROD",
      "__THEME",
      "cordova",
      "test",
      "fixture"
    ]
  },
  "dependencies": {
    "@feathersjs/client": "^5.0.0-pre.28",
    "@quasar/extras": "^1.0.0",
    "ajv": "6.0.0",
    "ajv-i18n": "^3.6.0",
    "casl": "1.0.2",
    "chart.js": "^3.7.1",
    "chartjs-plugin-annotation": "^1.4.0",
    "chartjs-plugin-datalabels": "^2.0.0",
    "chartjs-plugin-zoom": "^1.2.1",
    "chroma-js": "^2.4.2",
    "config": "^3.3.7",
    "core-js": "^3.6.5",
    "email-validator": "^2.0.4",
    "faker": "5.5.3",
    "feathers-reactive": "^0.10.0",
    "i18next": "^21.6.16",
    "loglevel": "^1.8.0",
    "mathjs": "^10.5.0",
    "mime": "^3.0.0",
    "moment": "^2.29.3",
    "moment-timezone": "^0.5.34",
    "papaparse": "^5.3.2",
    "path-browserify": "^1.0.1",
    "pinch-zoom-element": "^1.1.1",
    "quasar": "^2.7.7",
    "sanitize-html": "^2.7.0",
    "showdown": "^2.1.0",
    "sift": "^16.0.0",
    "socket.io-client": "^4.4.1",
    "url": "^0.11.0",
    "vue": "^3.0.0",
    "vue-i18n": "^9.2.0-beta.35",
    "vue-router": "^4.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@quasar/app-webpack": "^3.5.9",
    "c8": "^7.11.3",
    "chai": "^4.3.6",
    "chai-lint": "^0.1.1",
    "cordova": "^11.0.0",
    "cross-env": "^7.0.3",
    "envsub": "^4.0.7",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-vue": "^8.5.0",
    "eslint-webpack-plugin": "^3.1.1",
    "mocha": "^10.0.0",
    "prettier": "^2.5.1",
    "shx": "^0.3.4",
    "standard": "^17.0.0"
  },
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  },
  "browserslist": [
    "last 10 Chrome versions",
    "last 10 Firefox versions",
    "last 4 Edge versions",
    "last 7 Safari versions",
    "last 8 Android versions",
    "last 8 ChromeAndroid versions",
    "last 8 FirefoxAndroid versions",
    "last 10 iOS versions",
    "last 5 Opera versions"
  ]
}
